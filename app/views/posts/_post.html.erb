<div class="my_border post_card"> 
    <%= link_to user_post_path(post.author, post) do %>
      <h2 ><%= post.title %></h2>
      <p><%= post.text %></p>
    <% end %>
    <div class="post_comments" >      
    <span>Comments: <%= post.comments_counter %></span>,
    <span>Likes: <%= post.likes_counter %></span>      
    </div>
</div>
